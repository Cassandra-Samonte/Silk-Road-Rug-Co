<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs', {title: `Edit ${rug.name} | Silk Road Rug Co`}) %>
    <link rel="stylesheet" href="/styles/rug-form.css">
</head>

<body>
    <%- include('./partials/nav.ejs') %>

    <section class="hero">
        <h2>Edit a Listing</h2>
    </section>
    <br><br>
            <form method="POST" action="/rugs/<%= rug._id %>?_method=PUT">
                <!-- Name input -->
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" value="<%= rug.name %>" required>
                <br>
                <!-- Location input -->
                <label for="location">Location:</label>
                <input type="text" id="location" name="location" value="<%= rug.location %>" required>
                <br>
                <!-- Price input -->
                <label for="price">Price:</label>
                <input type="text" id="price" name="price" value="<%= rug.price %>" required>
                <br>
                <!-- Quantity input -->
                <label for="quantity">Quantity:</label>
                <input type="number" id="quantity" name="quantity" value="<%= rug.quantity %>" required>
                <br>
                <!-- Photo input -->
                <label for="photo">Photo (URL):</label>
                <input type="text" id="photo" name="photo" value="<%= rug.photo %>" required>
                <br>
                <!-- Description input -->
                <label for="description">Description:</label>
                <textarea id="description" name="description" required><%= rug.description %></textarea>
                <br>
                <input type="submit" value="Edit Rug">
            </form>
        <br><br>
    </div>          

    <%- include('./partials/footer.ejs') %>
    
</body>

</html>
